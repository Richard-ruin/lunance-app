# Application Settings
DEBUG=True
APP_NAME=Lunance Finance Tracker
APP_VERSION=1.0.0
RELOAD=True
LOG_LEVEL=INFO

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=lunance_dev

# Security Settings
SECRET_KEY=your-super-secret-key-minimum-32-characters-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_NUMBERS=True
PASSWORD_REQUIRE_SPECIAL_CHARS=False

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=30

# OTP Settings
OTP_EXPIRE_MINUTES=10
OTP_MAX_ATTEMPTS=3

# Email/SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@lunance.com
EMAIL_FROM_NAME=Lunance Finance

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS Origins (comma separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000

# File Upload Settings
UPLOAD_DIR=static/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.pdf

# Gamification Settings
POINTS_PER_TRANSACTION=1
POINTS_PER_SAVINGS_GOAL=10
POINTS_PER_DAILY_LOGIN=5
POINTS_PER_WEEKLY_STREAK=25

# Chat/AI Settings
CHAT_SESSION_TIMEOUT_MINUTES=30
MAX_CHAT_HISTORY=100

# Analytics Settings
ANALYTICS_RETENTION_DAYS=365
PREDICTION_DAYS_AHEAD=30

# External API Settings (Optional)
BANK_API_KEY=
NOTIFICATION_SERVICE_URL=

# Redis Configuration (Optional - for caching and rate limiting)
# REDIS_URL=redis://localhost:6379/0

# Celery Configuration (Optional - for background tasks)
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring (Optional)
# SENTRY_DSN=

# AWS Configuration (Optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=ap-southeast-1
# AWS_S3_BUCKET=

# Google Cloud Configuration (Optional)
# GOOGLE_CLOUD_PROJECT_ID=
# GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

